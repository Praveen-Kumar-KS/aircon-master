
@using Aircon.Areas.Admin.Models.Customer

@model CustomerAdminViewModel

<div>
    <form asp-controller="Customer" asp-action="SaveCustomerProfile" method="post" role="form">
        <div class="modal-header green-top">
            <h6 class=" subtitle1 p-0 bold">Customer Profile</h6>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <i class="m-r-10 mdi txt-black mdi-close"></i>
            </button>
        </div>

        <div class="modal-body">
            <div class=" subtitle1 p-0 normal-font m-b-10">@Model.CompanyName</div>
            <div class="user-card">
                <div class="subtitle1 bold p-0">Details</div>
                <div class="row">

                    <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                        <figure class="figure m-t-10">
                            <figcaption class="figure-caption">
                                <h6 class="figure-title">COMPANY ID</h6>
                                <p class="text-muted mb-0">@Model.DisplayCustomerId</p>
                            </figcaption>
                        </figure>
                    </div>
                    <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                        <figure class="figure m-t-10">
                            <figcaption class="figure-caption">
                                <h6 class="figure-title">ADMIN NAME</h6>
                                <p class="text-muted mb-0">@Model.AdminName</p>
                            </figcaption>
                        </figure>
                    </div>
                    <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                        <figure class="figure m-t-10">
                            <figcaption class="figure-caption">
                                <h6 class="figure-title">EMAIL</h6>
                                <p class="text-muted mb-0">@Model.AdminEmail</p>
                            </figcaption>
                        </figure>
                    </div>
                    <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                        <figure class="figure m-t-10">
                            <figcaption class="figure-caption">
                                <h6 class="figure-title">ACTIVE SINCE</h6>
                                <p class="text-muted mb-0">@(Model.ApprovedDate.HasValue ? Model.ApprovedDate.Value.ToString("dd MMM yyyy"): "")</p>
                            </figcaption>
                        </figure>
                    </div>


                </div>
            </div>

            <div class="row">

                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 m-t-20">
                    <air-input asp-for="CompanyName"></air-input>
                </div>

                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 m-t-20">
                    <air-input asp-for="AdminName"></air-input>
                </div>

                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 m-t-20">
                    <air-input asp-for="AdminEmail"></air-input>
                </div>

                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 m-t-20">
                    <air-input asp-for="Creditlimit"></air-input>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 m-t-20">
                    <div class="form__group  ">
                        <div class="mdl-selectfield ">
                            <i class="dropdown1 mdi mdi-menu-down"></i>
                            <select class="browser-default">
                                <option value="" selcted>Active</option>
                                <option value="1">Option 1</option>
                                <option value="2">Option 2</option>
                                <option value="3">Option 3</option>
                            </select>
                        </div>
                        <label for="text" class="form__label">Status</label>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 m-t-20">
                    <air-input asp-for="AdminPhoneNumber"></air-input>
                </div>

            </div>
            @await Component.InvokeAsync("Note", new { entityId = Model.CustomerId, entityName = "CustomerNote" })
            @*<div class="user-card m-t-20">
