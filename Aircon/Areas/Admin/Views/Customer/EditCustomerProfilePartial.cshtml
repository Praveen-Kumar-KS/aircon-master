        </div>

        <div class="modal-footer">

            @Html.HiddenFor(x => x.CustomerId)
            @Html.HiddenFor(x => x.DisplayCustomerId)
            @Html.HiddenFor(x => x.FranchiseParent)
            @Html.HiddenFor(x => x.AlternateEmail)
            @Html.HiddenFor(x => x.CreationDate)
            @Html.HiddenFor(x => x.ApprovedDate)
            @Html.HiddenFor(x => x.ActivatedDate)
            @Html.HiddenFor(x => x.SignedUpDate)
            @Html.HiddenFor(x => x.EinOrSsn)
            @Html.HiddenFor(x => x.IATANumber)
            @Html.HiddenFor(x => x.IsPaymentProcessed)
            @Html.HiddenFor(x => x.IsSetupCompleted)
            @Html.HiddenFor(x => x.IsSubscriptionExpired)
            @Html.HiddenFor(x => x.IsTermsAccepted)
            @Html.HiddenFor(x => x.SubscriptionExpiryDate)
            @Html.HiddenFor(x => x.SubscriptionId)
            @Html.HiddenFor(x => x.AddressId)
            @Html.HiddenFor(x => x.SubscriptionId)
            @Html.HiddenFor(x => x.IsActive)


            <div class="col-md-12 pb-30">
                <button class="btn float-right btn-primary" data-dismiss="modal">DISCARD CHANGES</button>
                <button class="btn float-right btn-secondary">SAVE & CLOSE</button>
            </div>
        </div>

    </form>
</div>


