@using Aircon.Areas.Customer.Models.Quotes
<link href="~/assets/libs/css/style.css" rel="stylesheet" />

@model QuotePricingViewModel

<form asp-controller="Quotes" asp-action="SaveQuote">
    <div class="modal-header">
        <h4 class="text-center m-t-10 bold">QUOTE SAVED</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <i class="m-r-10 mdi txt-black mdi-close"></i>
        </button>
    </div>
    <div class="modal-body">
        <div>
            <input type="hidden" name="Id" id="Id" />
            <p class="mt-20 pb-0 font-normal text-center txt-14">
                This Quote has been saved. It is now viewable under saved quotes.<br />
                <br />
            </p>

        </div>
    </div>
    <div class="modal-footer">
        <div>
            <button data-dismiss="modal" class="btn btn-secondary">RETURN TO QUOTE</button>
            <a  class="btn bg-change" asp-controller="Workflow" asp-action="Index">DASHBOARD</a>
        </div>
    </div>
</form>
