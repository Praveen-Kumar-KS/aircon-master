                <br />
                <h6 class="card-header bold additionaltxt">Contact Information:</h6>
                <hr class="hrline3" />
                <p class="pickup" style="margin-left: 200px;">Pickup Agent</p>
                <p class="pickupstatus" style="margin: -21px 170px;">Dropped to Airport</p>
                <p class="pickup" style="margin: -46px 486px;">Delivery Agent</p>
                <p class="pickupstatus" style="margin: 44px 457px;">Dropped to Airport</p>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <input type="hidden" id="id" name="id" />
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        <button class="btn btn-primary" onclick="getPDF()">Save as PDF</button>
    </div>

   
    <script type="text/javascript">
        function getPDF() {
            var element = document.getElementById('divContents').innerHTML;
            html2pdf(element, {
                margin: [0.3, 0, 0, 0],
                filename: 'ATAQuote.pdf',
                image: { type: 'jpeg', quality: 0.98 },
                html2canvas: { scale: 2 },
                jsPDF: { unit: 'in', format: 'a4', orientation: 'portrait' },
                pagebreak: { mode: 'avoid-all' }
            });
        };
    </script>