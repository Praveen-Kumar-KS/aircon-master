
@using Aircon.Areas.Customer.Models.Quotes
<link href="~/assets/libs/css/style.css" rel="stylesheet" />

@model QuotePricingViewModel

<div class="modal-header">
    <h4 class="text-center m-t-10 bold">EMAIL QUOTE</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <i class="m-r-10 mdi txt-black mdi-close"></i>
    </button>
</div>
<div class="modal-body">
    <div>
        <input type="hidden" name="Id" id="Id" />
        <p class="mt-20 pb-0 font-normal text-center txt-14">
            Select a type of a copy and it will open in your email application as an attachments.<br />
            <br />
        </p>

    </div>
</div>
<div class="modal-footer">
    <div>
        <button data-dismiss="modal" id="emailAtaQuote" class="btn btn-secondary">OFFICE COPY</button>
        <button data-dismiss="modal" id="emailDtaQuote" class="btn btn-secondary">CUSTOMER COPY</button>
    </div>
</div>

<div class="modal fade" tabindex="-1" id="emailAtaQuoteModal"
     data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog" style="max-width: 1100px!important;">
        <div class="modal-content">

        </div>
    </div>
</div>
<div class="modal fade" tabindex="-1" id="emailDtaQuoteModal"
     data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog" style="max-width: 1100px!important;">
        <div class="modal-content">

        </div>
    </div>
</div>

<script>
    $("#emailAtaQuote").click(function (e) {
            e.preventDefault();
            $.get('@Url.Action("AtaEmailQuote", "Quotes")', {}).done(function (res) {
                $AtaEmailPopupModal = $("#addchargeableitem");
                $AtaEmailPopupModal.find("div.modal-content").html(res);
                $AtaEmailPopupModal.modal("show");
            });
    });

    $("#emailDtaQuote").click(function (e) {
            e.preventDefault();
            $.get('@Url.Action("DtaEmailQuote", "Quotes")', {}).done(function (res) {
                $DtaEmailPopupModal = $("#addchargeableitem");
                $DtaEmailPopupModal.find("div.modal-content").html(res);
                $DtaEmailPopupModal.modal("show");
            });
    });
</script>