@using Aircon.Models

@model GridActionConfirmationModel

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="text-center m-t-10 bold">@Model.GridAction.Title</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <i class="m-r-10 mdi txt-black mdi-close"></i>
            </button>
        </div>
        <form asp-action="@Model.ActionName" asp-controller="@Model.ControllerName">
            <div class="modal-body">
                <div>
                    <input type="hidden" name="Id" id="Id" />
                    <p class="mt-20 pb-0 font-normal text-center txt-14">@Model.GridAction.AdditionalText</p>
                </div>
            </div>
            <div class="modal-footer">
                <div>
                    <button type="submit" class="btn  btn-primary">@Model.GridAction.ActionButtonText</button>
                    <button data-dismiss="modal" class="btn btn-secondary">@Model.GridAction.CancelButtonText</button>
                </div>
            </div>
        </form>
    </div>
</div>

